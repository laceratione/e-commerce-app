<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/style_filter_view"
    >

    <ImageView
        android:layout_centerHorizontal="true"
        android:id="@+id/ivBestSeller"
        android:layout_width="180dp"
        android:layout_height="180dp" />

    <ImageView
        android:padding="4dp"
        android:id="@+id/favoritesGridItem"
        android:backgroundTint="@color/white"
        android:layout_margin="20dp"
        android:background="@drawable/style_icons_circle"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_favorite_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:tint="@color/myColor1" />

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/ivBestSeller"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/llPrice"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvPriceWithDiscountBestSeller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:textColor="@color/myColor2"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:textStyle="bold"
                android:textSize="16dp"
                android:id="@+id/tvPriceWithoutDiscountBestSeller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:layout_below="@id/llPrice"
            android:textColor="@color/myColor2"
            android:textStyle="bold"
            android:textSize="12dp"
            android:id="@+id/tvTitleBestSeller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


</RelativeLayout>